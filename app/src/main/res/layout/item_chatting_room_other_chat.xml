<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/textview_chattingroomotherchat_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chattingroomotherchat_writer"
        android:textAppearance="@style/title_bold_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_chattingroomotherchat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/chatting_message_box_other_chat"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@id/textview_chattingroomotherchat_writer"
        app:layout_constraintTop_toBottomOf="@id/textview_chattingroomotherchat_writer" />

    <TextView
        android:id="@+id/textview_chattingroomotherchat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/chattingroomchat_time"
        android:textAppearance="@style/body_regular_11"
        android:textColor="@color/jagi_gray_message"
        app:layout_constraintBottom_toBottomOf="@id/textview_chattingroomotherchat_content"
        app:layout_constraintStart_toEndOf="@id/textview_chattingroomotherchat_content" />

</androidx.constraintlayout.widget.ConstraintLayout>